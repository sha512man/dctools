function tunnel {
    port="8000"

    case "$1" in
        "foo")
            port="8000"
        ;;

        "bar")
            port="8001"
        ;;

        "baz")
            port="8002"
        ;;
    esac

    echo "Tunneling using port ${port}"

    ssh -R "${port}:localhost:${port}" wedoslb
}

